    private void ConvertReamurActionPerformed(java.awt.event.ActionEvent evt) {                                              
        double input = Double.parseDouble(Input.getText());
        double celcius = input/0.8;
        double fahrenheit = (input-7.5)*24/7+32;
        double kelvin = input/0.8 + 273.15;
        HasilReamur.setText(input + " R");
        HasilCelcius.setText(celcius + " C");
        HasilFahrenheit.setText(fahrenheit + " F");
        HasilKelvin.setText(kelvin + " K");
    }                                             

    private void ConvertCelciusActionPerformed(java.awt.event.ActionEvent evt) {                                               
        double input = Double.parseDouble(Input.getText());
        double reamur = input * 0.8;
        double fahrenheit = input * 1.8 + 32;
        double kelvin = input + 273.15;
        HasilCelcius.setText(input + " C");
        HasilReamur.setText(reamur + " R");
        HasilFahrenheit.setText(fahrenheit + " F");
        HasilKelvin.setText(kelvin + " K");
    }                                              

    private void InputActionPerformed(java.awt.event.ActionEvent evt) {                                      
        
    }                                     

    private void ConvertKelvinActionPerformed(java.awt.event.ActionEvent evt) {                                              
         double input = Double.parseDouble(Input.getText());
         double celcius = input - 273.15;
         double fahrenheit = input*1.8 - 459.67;
         double reamur = (input - 273.15)*0.8;
         HasilKelvin.setText(input + " K");
         HasilCelcius.setText(celcius + " C");
         HasilFahrenheit.setText(fahrenheit + " F");
         HasilReamur.setText(reamur + " R");
    }                                             

    private void ConvertFahrenheitActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        double input = Double.parseDouble(Input.getText());
        double celcius = (input - 32)/1.8;
        double reamur = (input - 32)/2.25;
        double kelvin = (input + 459.67)/1.8;
        HasilFahrenheit.setText(input + " F");
        HasilCelcius.setText(celcius + " C");
        HasilReamur.setText(reamur + " R");
        HasilKelvin.setText(kelvin + " K");
    }                                                 

